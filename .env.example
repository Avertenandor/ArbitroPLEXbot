# ArbitroPLEXbot Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit your .env file to git!

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Database Configuration
# PostgreSQL connection string (async driver)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/arbitroplexbot

# Redis Configuration (for task queue and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Keys (CRITICAL - must be unique and secure!)
# Generate with: openssl rand -hex 32
SECRET_KEY=generate_with_openssl_rand_hex_32_minimum_32_characters

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=generate_fernet_key_see_command_above

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Primary RPC URL (BSC/Polygon)
RPC_URL=https://bsc-dataseed.binance.org/

# QuickNode RPC (optional, recommended for production)
RPC_QUICKNODE_HTTP=
RPC_QUICKNODE_WSS=

# NodeReal RPC (optional, backup provider)
RPC_NODEREAL_HTTP=
RPC_NODEREAL_WSS=

# NodeReal2 RPC (optional, second backup)
RPC_NODEREAL2_HTTP=
RPC_NODEREAL2_WSS=

# =============================================================================
# WALLET ADDRESSES
# =============================================================================

# Main wallet address (for outgoing payments)
WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# System wallet for receiving USDT deposits
SYSTEM_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# Auth system wallet for receiving PLEX payments
AUTH_SYSTEM_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# Payout wallet (optional, defaults to WALLET_ADDRESS)
PAYOUT_WALLET_ADDRESS=

# Private key for wallet (ENCRYPTED - set via bot admin panel)
# Do NOT set this manually unless you know what you're doing
# WALLET_PRIVATE_KEY=

# =============================================================================
# TOKEN CONTRACTS
# =============================================================================

# USDT Contract Address on BSC
USDT_CONTRACT_ADDRESS=0x55d398326f99059fF775485246999027B3197955

# PLEX Token Contract Address
AUTH_PLEX_TOKEN_ADDRESS=0xdf179b6cadbc61ffd86a3d2e55f6d6e083ade6c1
PLEX_CONTRACT_ADDRESS=0xdf179b6cadbc61ffd86a3d2e55f6d6e083ade6c1

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================

# Super Admin Telegram ID (REQUIRED in production)
# Find your ID using @userinfobot on Telegram
SUPER_ADMIN_TELEGRAM_ID=YOUR_TELEGRAM_ID_HERE

# Additional admin IDs (comma-separated)
ADMIN_TELEGRAM_IDS=

# Super Admin IDs (comma-separated list of telegram IDs)
SUPER_ADMIN_IDS=1040687384

# Trusted Admin IDs (comma-separated list of telegram IDs)
TRUSTED_ADMIN_IDS=1040687384,1691026253,241568583,6540613027

# Tech Deputy Telegram ID
TECH_DEPUTY_TELEGRAM_ID=1691026253

# ARYA Command Givers (comma-separated list of telegram IDs)
ARYA_COMMAND_GIVERS=1040687384,1691026253,241568583,6540613027

# ARYA Teachers (comma-separated list of telegram IDs)
ARYA_TEACHERS=1040687384,1691026253,241568583,6540613027

# Verified Admin IDs with Security Roles (JSON format)
# Example: {"1040687384": {"username": "admin1", "role": "super_admin", "name": "Admin One"}, "1691026253": {"username": "admin2", "role": "extended_admin", "name": "Admin Two"}}
VERIFIED_ADMIN_IDS=

# =============================================================================
# PAY-TO-USE SETTINGS
# =============================================================================

# PLEX tokens required per $1 of deposit per day
PLEX_PER_DOLLAR_DAILY=10

# PLEX token decimals
PLEX_DECIMALS=9

# Authorization price in PLEX
AUTH_PRICE_PLEX=10.0

# =============================================================================
# DEPOSIT LEVELS
# =============================================================================

DEPOSIT_LEVEL_1=10.0
DEPOSIT_LEVEL_2=50.0
DEPOSIT_LEVEL_3=100.0
DEPOSIT_LEVEL_4=150.0
DEPOSIT_LEVEL_5=300.0

# Minimum deposit amount (dust protection)
MINIMUM_DEPOSIT_AMOUNT=10.0

# =============================================================================
# ROI CONFIGURATION
# =============================================================================

# Daily ROI percentage (0.02 = 2%)
ROI_DAILY_PERCENT=0.02

# ROI cap multiplier (5.0 = 500% max ROI)
ROI_CAP_MULTIPLIER=5.0

# =============================================================================
# WITHDRAWAL LIMITS
# =============================================================================

# Threshold for dual control approval (in USDT)
DUAL_CONTROL_WITHDRAWAL_THRESHOLD=1000.0

# Escrow expiry time in hours
DUAL_CONTROL_ESCROW_EXPIRY_HOURS=24

# =============================================================================
# ADMIN RATE LIMITS (for security monitoring)
# =============================================================================

ADMIN_MAX_WITHDRAWALS_PER_DAY=50
ADMIN_MAX_WITHDRAWAL_AMOUNT_PER_DAY=50000.0
ADMIN_MAX_WITHDRAWAL_APPROVALS_PER_HOUR=50
ADMIN_MAX_LARGE_WITHDRAWAL_APPROVALS_PER_HOUR=10
ADMIN_LARGE_WITHDRAWAL_THRESHOLD=1000.0
ADMIN_MAX_BANS_PER_HOUR=20
ADMIN_MAX_TERMINATIONS_PER_HOUR=20
ADMIN_MAX_CREATIONS_PER_DAY=5
ADMIN_MAX_DELETIONS_PER_DAY=5

# =============================================================================
# EMERGENCY STOPS (set to true to halt operations)
# =============================================================================

EMERGENCY_STOP_WITHDRAWALS=false
EMERGENCY_STOP_ROI=false
EMERGENCY_STOP_DEPOSITS=false
BLOCKCHAIN_MAINTENANCE_MODE=false

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Environment (development/production)
ENVIRONMENT=development

# Debug mode (MUST be false in production)
DEBUG=false

# Telegram bot username (for referral links)
TELEGRAM_BOT_USERNAME=

# Anthropic API key (for AI assistant features)
ANTHROPIC_API_KEY=

# Database echo (for debugging)
DATABASE_ECHO=false

# Log level
LOG_LEVEL=INFO

# Health check port
HEALTH_CHECK_PORT=8080
